<?xml version="1.0" encoding="UTF-8" ?>

<PropertyList>

	<sim>
		<description>Douglas DC-9-32</description>
		<author>Lester Buffo, Joshua Davidson (it0uchpods, 411)</author>
		<status>alpha</status>
		<flight-model>yasim</flight-model>
		<aero>DC-9-32</aero>

		<model>
			<path>Aircraft/DC-9-32/Models/DC-9-32.xml</path>
			<livery>
				<file>DAL</file>
			</livery>
		</model>

		<startup>
			<splash-texture>Aircraft/DC-9-32/splash.png</splash-texture>
		</startup>
		<instrumentation>
			<path>Aircraft/DC-9-32/Systems/instrumentation.xml</path>
		</instrumentation>
		<systems>
			<autopilot>
				<name>Autopilot</name>
				<path>Aircraft/DC-9-32/Systems/DC-9-autopilot.xml</path>
			</autopilot>
		</systems>

		<sound>
			<path>Aircraft/DC-9-32/DC-9-sound.xml</path>
		</sound>
		<instrumentation include="Systems/init-instrumentation.xml"/>
		<view>
			<name>Pilot View</name>
			<internal archive="y">true</internal>
			<config>
				<x-offset-m archive="y">-0.5</x-offset-m>
				<y-offset-m archive="y">1.5</y-offset-m>
				<z-offset-m archive="y">3.1</z-offset-m>
				<pitch-offset-deg archive="y">-5</pitch-offset-deg>
			</config>
		</view>
		<!-- Helicopter View -->
		<view n="1">
			<internal archive="y">false</internal>
			<config>
				<target-z-offset-m archive="y">20</target-z-offset-m>
			</config>
		</view>
		<!-- Chase View -->
		<view n="2">
			<internal archive="y">false</internal>
			<config>
				<target-z-offset-m archive="y">20</target-z-offset-m>
			</config>
		</view>
		<!-- Tower View -->
		<view n="3">
			<internal archive="y">false</internal>
			<config>
				<target-z-offset-m archive="y">20</target-z-offset-m>
			</config>
		</view>
		<!-- Chase View Without Yaw -->
		<view n="5">
			<internal archive="y">false</internal>
			<config>
				<target-z-offset-m archive="y">20</target-z-offset-m>
			</config>
		</view>
		<!-- Fly-by View -->
		<view n="6">
			<internal archive="y">false</internal>
			<config>
				<target-z-offset-m archive="y">20</target-z-offset-m>
			</config>
		</view>
		<view n="100">
			<name>Copilot View</name>
			<internal archive="y">true</internal>
			<config>
				<from-model type="bool">true</from-model>
				<x-offset-m archive="y">0.5</x-offset-m>
				<y-offset-m archive="y">1.5</y-offset-m>
				<z-offset-m archive="y">3.1</z-offset-m>
				<pitch-offset-deg archive="y">-5</pitch-offset-deg>
			</config>
		</view>
		<chase-distance-m>-45</chase-distance-m>

		<weight n="0">
			<name>Crew</name>
			<weight-lb>250</weight-lb>
			<max-lb>600</max-lb>
			<min-lb>120</min-lb>
		</weight>
		<weight n="1">
			<name>PAX</name>
			<weight-lb>8775</weight-lb>
			<max-lb>11700</max-lb>
			<min-lb>0</min-lb>
		</weight>

		<menubar>
			<default>
				<menu n="100">
					<label>Douglas DC-9-32</label>
					<enabled type="bool">true</enabled>

					<item>
						<label>QuickStart/label>
						<binding>
							<command>property-toggle</command>
							<property>sim/model/start-idling</property>
						</binding>
					</item>
					<item>
						<label>Select Livery</label>
						<binding>
							<command>nasal</command>
							<script>
							 aircraft.livery.dialog.open();
							</script>
						</binding>
					</item>
					<item>
						<label>Pushback</label>
						<binding>
							<command>dialog-show</command>
							<dialog-name>pushback</dialog-name>
						</binding>
					</item>
				</menu>
			</default>
		</menubar>
        <instrumentation>
        <cdu>
			<config>
				<texture>boeing_brown.png</texture>
			</config>
			<display>IDENT</display>
			<ident>
				<model>747-400</model>
				<engines>-80C2B1F</engines>
			</ident>
			<input type="string"/>
		</cdu>
        </instrumentation>
	</sim>

	<controls>
		<gear>
			<brake-parking type="bool">true</brake-parking>
		</gear>
	</controls>

	<engines>
		<apu>
			<rpm type="double">0</rpm>
			<running type="bool">false</running>
		</apu>
		<engine n="0">
			<rpm type="double">0</rpm>
			<failed type="bool">false</failed>
			<on-fire type="bool">false</on-fire>
			<running type="bool">false</running>
			<started type="bool">false</started>
		</engine>
		<engine n="1">
			<rpm type="double">0</rpm>
			<failed type="bool">false</failed>
			<on-fire type="bool">false</on-fire>
			<running type="bool">false</running>
			<started type="bool">false</started>
		</engine>
	</engines>

	<nasal>
		<systems>
			<file>Aircraft/DC-9-32/Nasal/systems.nas</file>
		</systems>
        
        <radar>
            <file>Aircraft/Instruments-3d/RDR-160/RDR160.nas</file>
        </radar>

	</nasal>
<input>
        <keyboard>
            <key n="127">
                <name>Delete</name>
                <desc>Toggle Reversers</desc>
                <binding>
                    <command>property-toggle</command>
                    <property>controls/engines/engine[0]/reverser</property>
                </binding>
                <binding>
                    <command>property-toggle</command>
                    <property>controls/engines/engine[1]/reverser</property>
                </binding>
            </key>
        </keyboard>
    </input>


</PropertyList>
